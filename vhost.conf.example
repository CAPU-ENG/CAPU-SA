<VirtualHost *:80>
  ServerAdmin webmaster@localhost
  ServerName <FQDN>
  ServerAlias chexie.net www.chexie.net bbs.chexie.net

  DocumentRoot <absolute-path-to-CAPUBBS-dir-or-soft-link>
  # notice: if `CAPUBBS` is under `/var/www/`, then no need to add `Directory` below
  <Directory />
    AddDefaultCharset UTF-8
    <IfModule mod_authz_core.c>
      # Apache 2.4
      Require all granted
    </IfModule>
      <IfModule !mod_authz_core.c>
      # Apache 2.2
      Order Deny,Allow
      Allow from all
    </IfModule>
  </Directory>

  ErrorLog logs/chexie.net-error_log
  CustomLog logs/chexie.net-access_log common
  
  # option: bandwidth limit; for better performance
  LoadModule bw_module    modules/mod_bw.so
  BandWidthModule On
  ForceBandWidthModule On
  BandWidth all 100000 # byte

  # option: https rewrite rules; this will be generated by `letsencrypt` automatically
</VirtualHost>
